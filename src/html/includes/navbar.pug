mixin dropdownItem(linkName, linkUrl)
  a(class="dropdown-item" href=linkUrl)= linkName

nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
  a(class="navbar-brand" href="#") Your Website
  button(class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation")
    span(class="navbar-toggler-icon")
  div(class="collapse navbar-collapse", id="navbarSupportedContent")
    ul(class="navbar-nav mr-auto")
      li(class="nav-item active")
        a(class="nav-link", href="#") Home
        span(class="sr-only") current
      li(class="nav-item dropdown")
        a(class="nav-link dropdown-toggle"
          href="#"
          id="navbarDropdown"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false") Dropdown
        div(class="dropdown-menu" aria-labelledby="navbarDropdown")
          +dropdownItem("Action", "#")
          +dropdownItem("Another Action", "#")
          div(class="dropdown-divider")
          +dropdownItem("Something else here", "#")
      li(class="nav-item")
        a(class="nav-link disabled" href="#") Disabled